<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OhjelmistoTuotanto1.FilterPage"
             xmlns:local="clr-namespace:OhjelmistoTuotanto1"
             BackgroundColor="#1E1E1E"
             Title="Mökkien Suodatus">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Otsikko -->
            <Label Text="Mökkihaku"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- Pickerit vasemmassa reunassa -->
            <HorizontalStackLayout Spacing="20"
                                   HorizontalOptions="Start"
                                   Padding="0,0,0,10">

                <!-- Hintaluokka -->
                <VerticalStackLayout WidthRequest="160">
                    <Label Text="Hintaluokka"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#CCCCCC" />
                    <Picker x:Name="PricePicker"
                            SelectedIndexChanged="OnFilterChanged"
                            BackgroundColor="#2D2D2D"
                            TextColor="White"
                            Title="Valitse" />
                </VerticalStackLayout>

                <!-- Varaustilanne -->
                <VerticalStackLayout WidthRequest="160">
                    <Label Text="Varaustilanne"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#CCCCCC" />
                    <Picker x:Name="StatusPicker"
                            SelectedIndexChanged="OnFilterChanged"
                            BackgroundColor="#2D2D2D"
                            TextColor="White"
                            Title="Valitse" />
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <!-- Mökkien lista -->
            <CollectionView x:Name="CottagesCollection"
                            ItemsLayout="VerticalGrid, 2"
                            Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="10"
                               Padding="15"
                               Margin="5"
                               HasShadow="False"
                               BorderColor="#444">

                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="White" />

                                <Label Text="{Binding Price, StringFormat='Hinta: {0} €'}"
                                       FontSize="13"
                                       TextColor="#AAAAAA" />

                                <Label Text="{Binding AvailabilityText}"
                                       FontSize="13"
                                       TextColor="{Binding IsAvailable, Converter={StaticResource AvailabilityColorConverter}}" />
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
